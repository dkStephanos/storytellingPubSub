<div class="container textjustify-center">
  <h2>Notifications</h2>
  <% if notifications.empty? %>
    <p>
      No new notifications
    </p>  
  <% else %>
    <table class="table">
      <thead>
        <tr>
          <th>Tell Title</th>
          <th>Tell Teller</th>
          <th>Tell Keyword</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% notifications.each do |notification| %>
          <tr>
            <td><%= notification.tell.title %></td>
            <td><%= notification.tell.tellerName %></td>
            <td><%= notification.tell.keyword %></td>
            <td><%= link_to 'View Tell', notification.tell, :class => "btn btn-secondary" %></td>
            <td><%= link_to 'Subscription', notification.subscription, :class => "btn btn-secondary" %></td>
            <td><%= link_to 'Dismiss', notification, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>