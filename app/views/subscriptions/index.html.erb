<div class="jumbotron">
  <p id="notice"><%= notice %></p>

<h2><%= current_user.email %>'s Subscriptions</h2>

<br>

<table class="table">
  <thead>
    <tr>
      <th>Tag</th>
      <th>Subscription Type</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscriptions.each do |subscription| %>
      <tr>
        <% if subscription.title %>
          <td><%= subscription.title == "" ? "*ALL*" : subscription.title %></td>
        <% elsif subscription.teller %>
          <td><%= subscription.teller == "" ? "*ALL*" : subscription.teller %></td>
        <% elsif subscription.keyword %>
          <td><%= subscription.keyword == "" ? "*ALL*" : subscription.keyword %></td>
        <% else %>
        <% end %>
        <td><%= subscription.subscription_type %></td>
        <td><%= link_to 'Details', subscription, :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Edit', edit_subscription_path(subscription), :class => "btn btn-secondary" %></td>
        <td><%= link_to 'Unsubscribe', subscription, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Subscription', new_subscription_path, :class => "btn btn-primary" %>
</div>
